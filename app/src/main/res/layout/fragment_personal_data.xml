<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="60dp"
    android:layout_height="match_parent"
    tools:context="com.example.login.fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="35dp"
                android:src="@drawable/baseline_add_24"
                android:layout_height="35dp"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="个人信息"
                android:textColor="@color/black"
                android:textSize="20sp"

                android:textStyle="bold"></TextView>

        </LinearLayout>
        <ImageView
            android:layout_width="35dp"

            android:layout_height="35dp"></ImageView>
    </LinearLayout>
    <ImageView
        android:layout_width="120dp"
        android:src="@mipmap/ic_head"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="120dp"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="姓名：xxx"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="+133 2288 9208"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="所属医院"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="京海中医院"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="12dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="主治项目"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="舌象诊断"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="11dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="主治诊断"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="11dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="     轻微"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="联系方式"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="133 2288 9208 "
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:src="@drawable/baseline_contacts_24"
                    android:layout_height="@dimen/dp_30"></ImageView>

                <TextView
                    android:id="@+id/send_report"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="    发送我的报告给我的医生"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_height="@dimen/dp_30"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>